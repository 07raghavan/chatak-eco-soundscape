PORT=3001
NODE_ENV=development

# =====================================================
# DATABASE CONFIGURATION (Supabase)
# =====================================================

# Option 1: Supabase Connection String (RECOMMENDED)
# Get this from your Supabase project settings > Database > Connection string
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Option 2: Individual Database Parameters (Legacy/Local)
# Only use these if not using SUPABASE_DB_URL
# DB_HOST=db.[YOUR-PROJECT-REF].supabase.co
# DB_PORT=5432
# DB_NAME=postgres
# DB_USER=postgres
# DB_PASSWORD=your_supabase_password
# DB_SSL=true

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================

# Supabase Project Settings
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =====================================================
# AWS S3 CONFIGURATION
# =====================================================

AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-bucket

# =====================================================
# BACKGROUND WORKERS
# =====================================================

ENABLE_SEGMENTATION_WORKER=false # Keep false so workers do not auto-start; use on-demand endpoints
SEGMENTATION_POLL_MS=5000
ENABLE_AED_WORKER=false # Keep false so workers do not auto-start; use on-demand endpoints
AED_POLL_MS=3000
AUTO_QUEUE_AED=false # Disable automatic AED job creation after segmentation

# AED Implementation Choice
AED_USE_PURE_JS=true # Use pure JavaScript implementation (no Python dependencies)

# =====================================================
# AUTHENTICATION
# =====================================================

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =====================================================
# OPTIONAL CONFIGURATIONS
# =====================================================

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

