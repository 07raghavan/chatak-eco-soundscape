# =====================================================
# CHATAK ECO SOUNDSCAPE - BACKEND ENVIRONMENT
# =====================================================
# Copy this file to .env and fill in your actual values

# =====================================================
# SERVER CONFIGURATION
# =====================================================
PORT=3001
NODE_ENV=development

# =====================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =====================================================
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatak_dev
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# =====================================================
# AUTHENTICATION
# =====================================================

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =====================================================
# AWS S3 CONFIGURATION
# =====================================================
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=your-aws-region
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_SIGNED_URL_EXPIRES=86400

# Legacy AWS variables (for compatibility)
CHATAK_AWS_ACCESS_KEY_ID=your-aws-access-key-id
CHATAK_AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
CHATAK_AWS_REGION=your-aws-region

# =====================================================
# WORKERS CONFIGURATION
# =====================================================
ENABLE_SEGMENTATION_WORKER=false
ENABLE_AED_WORKER=false
AUTO_QUEUE_AED=false

# =====================================================
# OPTIONAL CONFIGURATIONS
# =====================================================

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

